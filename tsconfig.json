{
  "compilerOptions": {
    "target": "es2020", //required for use with BigInt types
    "lib": ["es2020"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "*": [
        "./node_modules/*",
        "./node_modules/@types/*",
        "./node_modules/.pnpm/*",
        "./node_modules/.pnpm/@types/*"
      ],
      "generated": ["./generated"]
    }
  },
  "include": ["src", "test", "scripts","generatedEntities.ts", ".eslintrc.js", "lint-staged.config.js", "types.d.ts"]
}
